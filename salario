#include <stdio.h>

int main(){
    
    float salario, salarioTotal;

    printf("DIGITE O SALARIO: ");
    scanf("%f", &salario);

    if (salario <= 1000){
          salarioTotal = salario * 1.15;

    }
    else if (salario <= 2000){
           salarioTotal = salario * 1.10;

    }
    else {
           salarioTotal * 1.05;
    }
    
    printf("%.2f", salarioTotal);

    return 0;
    
}
